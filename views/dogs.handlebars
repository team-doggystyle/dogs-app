<h1>Cause for SB Paws</h1>

<h2>Show available dogs:</h2>

<ul>
  {{#each dogs}}
    {{#unless adopted}}
      {{> dogs/dog-block adopted=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Recently adopted dogs:</h2>

<ul>
  {{#each dogs}}
    {{#if adopted}}
      {{> dogs/dog-block adopted=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Dog</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Dog Name:</label>
    <input type="text" id="dog" name="name">
  </div>

  <div class="form-group">
    <label for="adopted">adopted?</label><br>
    <input type="radio" name="adopted" value="1" checked> adopted!<br>
    <input type="radio" name="adopted" value="0"> available
  </div>

  <button type="submit">Add Dog</button>
</form>
